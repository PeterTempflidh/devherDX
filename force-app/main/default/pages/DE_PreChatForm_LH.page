        </style>

        <!-- managed by salesforce team -->
        <style type="text/css">
            body {
                overflow: hidden;
            }

            #bannerImg {
                height: 80px;
                width: 126px;
            }

            input:valid + .errorMsg,
            input:focus + .errorMsg {
                display: none;
            }

            input:invalid + .errorMsg {
                display: "";
                padding-left: 10px;
                color: red;
            }
        </style>
    </head> 

    <body>

        <!-- image logo -->
        <div id="imgBlock">
            <img src="{!URLFOR($Resource.LieferheldChatLogo)}" id="bannerImg" height="50" />
        </div>

        <form method="post" id="prechatForm" name="prechatForm">
            <div style="margin-top: 10px;">
                
                <!-- user info  -->
                <div id="userInfo">
                    
                    <!-- user name -->
                    <div class="inpCls">
                        <div class="inpLabel">Name:</div>
                        <div>
                            <input type='text' name='liveagent.prechat:UserName' />
                            <br />
                        </div>
                    </div>

                    
                    <!-- email -->
                    <div class="inpCls">
                        <div class="inpLabel">
                            Email:<span style="color:red">&nbsp;*</span>
                        </div>
                        <div>
                            <input type='email' name='liveagent.prechat:EmailDetail' id="emailDetail" required="true" pattern="^[a-zA-Z0-9._%+-/!#$%&'*=?^_`{|}~]+@[a-zA-Z0-9.-]+\.[a-zA-Z]{2,4}$" />
                            <span class="errorMsg">Bitte gib eine gültige Emailadresse an.</span>
                            <br />
                        </div>
                    </div>


                    <!-- order number -->
                    <div class="inpCls">
                        <div class="inpLabel">Bestellnummer:</div>
                        <div>
                            <input type='text' name='liveagent.prechat:OrderNumber' pattern="[0-9]{13}" maxlength="13" />
                            <span class="errorMsg">Die Bestellnummer besteht aus 13 Ziffern.</span>
                        </div>
                    </div>

                </div>

                <!-- restaurant input field -->
                <div id="restaurantInfo">

                    <!-- restaurant name -->
                    <div id="ResName" class="inpCls">
                        <div class="inpLabel" style="width:100%">Name des Restaurants:</div>
                        <div style="width:100%">
                            <input type="text" name='liveagent.prechat:RestaurantName' id="resNameInput" /><span style="color:red">&nbsp;*</span></div>
                    </div>
                    
                    <!-- restaurant id -->
                    <div id="ResID" class="inpCls">
                        <div class="inpLabel">Kundennummer:</div>
                        <div>
                            <input type="text" name='liveagent.prechat:RestaurantID' />
                        </div>
                    </div>
                    
                </div>
                
                <!-- survey -->
                <div class="inpCls" id="surveyRadio">
                    <div class="inpLabel" id="surveyLabel">Im Anschluss an den Chat möchte ich einen Fragebogen zur Bewertung der Qualität des Kundenservice erhalten.<span style="color:red">&nbsp;*</span></div>
                    <div id="radioblck">
                        <div style="width:35%;display:inline-block;">
                            <label class="slds-radio" for="surveyYes">
                                <input type="radio" name="survey" id="yes" onclick="setSurvey(this)" value="Yes" required="required" />
                                <span class="selRadio">Ja</span>
                            </label>
                        </div>
                        <div style="width:35%;display:inline-block;">
                            <label class="slds-radio" for="surveyNo">
                                <input type="radio" name="survey" id="no" onclick="setSurvey(this)" value="No" required="required" />
                                <span class="selRadio">Nein</span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <br/>
            
            <!-- hidden input fields -->
            <div id="hiddenSection" style="display: none">
                <input type="hidden" name="liveagent.prechat.save:UserName" value="User_Name__c" />
                <input type="hidden" name="liveagent.prechat.save:EmailDetail" value="Email__c" />
                <input type="hidden" name="liveagent.prechat.save:OrderNumber" value="Order_Number__c" />
                <input type="hidden" name="liveagent.prechat.save:Survey" value="Survey__c" />
                <input type="hidden" name="liveagent.prechat.save:Platform" value="Platform__c" />
                <input type="hidden" name="liveagent.prechat.save:RestaurantName" value="Restaurant_Name__c" />
                <input type="hidden" name="liveagent.prechat.save:RestaurantID" value="Restaurant_ID__c" />
                <input type="hidden" name="liveagent.prechat.save:Problem" value="My_Problem__c" />

                <input type="text" name="liveagent.prechat:Platform" id="Platform" value="LieferheldDE" />

                <!-- this one is set by setSurvey(), since it's displayed as a radio -->
                <select name="liveagent.prechat:Survey" id="selectSurvey" required="required">
                    <option value="Yes"></option>
                    <option value="No"></option>
                </select>

                <!-- this one is filled by detailsCallback -->
                <select name="liveagent.prechat:Problem" id="selectOpt">
                    <option></option>
                </select>
            </div>


            <div class="inpCls">
                <input type="submit" value="Chat Starten" id="prechat_submit" class="de_Button" />
            </div>
        </form>

        <script type="text/javascript">
            /**
             * Based on the custom details passed from LH website identifies if
             * current user is a customer or a restaurant.
             * Based on this hide/display some form fields
             * @param  {Object} details pre chat details
             */
            function detailsCallback(details) {
                for (var i = 0; i < details.customDetails.length; i++) {

                    if (details.customDetails[i].label != "My Problem") {
                        continue;
                    }
                    
                    var myProblem = details.customDetails[i].value;

                    // checks if user is customer or restaurant
                    if (/restaurant/i.test(myProblem)) {
                        // user is a restaurant partner
                        displayRestaurantForm();
                    } else {
                        displayCustomerForm();
                    }

                    // fill myproblem select input
                    setMyProblemValue(myProblem);               
                }
            }

            /**
             * Enable restaurant specific input fields
             */
            function displayRestaurantForm () { 
                document.getElementById("restaurantInfo").style.display = "";
            }

            /**
             * Hide restaurant specific input fields and make then not required
             */
            function displayCustomerForm() {
                document.getElementById("restaurantInfo").style.display = "none";
                
                Array.prototype.slice.call(
                    document.querySelectorAll("#restaurantInfo input")
                ).map(function (field) {
                    field.required = false;
                });
            }

            // fill MyProblem select with specified value
            function setMyProblemValue(val) {
                var sel = document.getElementById("selectOpt");
                
                var opt = document.createElement("option");
                opt.value = val;
                
                sel.add(opt);
                sel.value = val;
            }

            // set survey select option
            function setSurvey (radio) {
                document.getElementById("selectSurvey").value = radio.value;
            }
            
            /**
             * Called on page load, initializes prechat form
             */
            function onPageLoad() {
                // NOTE: this must be changed when going to live
                var chatUrl = "https://d.la1-c2-frf.salesforceliveagent.com/chat";

                // form id
                var formId = "prechatForm";

                liveagent.details.preChatInit(chatUrl, "detailsCallback", formId);
            }

            window.addEventListener("load", onPageLoad, false); 
        </script>
    </body>
    </html>
</apex:page>