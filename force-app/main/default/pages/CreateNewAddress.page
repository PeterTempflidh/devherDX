                        if (!"{!AddressDetail__c.Id}") {
                            // if new address force the country value
                            self.addressDetail = {
                                country: result,
                                account: "{!AddressDetail__c.Account__c}"
                            };
                        }
                        self.addressDetail.type = ["Billing Address","Shipping Address","Restaurant Address"];
                    }, {
                        escape: false
                    }
