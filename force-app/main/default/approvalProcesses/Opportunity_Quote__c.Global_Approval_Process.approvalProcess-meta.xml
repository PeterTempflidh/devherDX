<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Id_Account__c</field>
        <field>Id_Opportunity__c</field>
        <field>Subtotal__c</field>
        <field>SubTotalRF__c</field>
        <field>Total__c</field>
        <field>Total_fm__c</field>
        <field>Approval_Comments__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>khaliloglu@talabat.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity_Quote__c.Approval_Needed__c</field>
                <operation>contains</operation>
                <value>Comapproval,Addcharges</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity_Quote__c.RecordType</field>
                <operation>equals</operation>
                <value>Talabat Opportunity Quote</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Commission and Additional Charges Approval</label>
        <name>Commission_and_Additional_Charges_Approval</name>
    </approvalStep>
    <description>SP-2140</description>
    <emailTemplate>Salesforce_Templates/Quote_Approval</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Opportunity_Quote__c.RecordType</field>
            <operation>equals</operation>
            <value>Talabat Opportunity Quote</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approved_status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Quote_Approval_Notification</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Quote_Rejection_Notification</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Rejected_Status</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>true</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Pending_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Global - Approval Process</label>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
