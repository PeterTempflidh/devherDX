<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Total_Amount__c</field>
        <field>Specifications__c</field>
        <field>Start_Date__c</field>
        <field>Product_Group__c</field>
        <field>Product__c</field>
        <field>Type__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Run_Approve_Trigger_For_Add_Charges</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Status_To_Activated</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>cherry.ho@foodpanda.hk</name>
                <type>user</type>
            </approver>
            <approver>
                <name>davy.keung@foodpanda.hk</name>
                <type>user</type>
            </approver>
            <approver>
                <name>jasmine.chung@foodpanda.hk</name>
                <type>user</type>
            </approver>
            <approver>
                <name>renee.chan@foodpanda.hk.prod</name>
                <type>user</type>
            </approver>
            <approver>
                <name>y.lai@foodpanda.hk</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Step 1</label>
        <name>Step_1</name>
        <rejectionActions>
            <action>
                <name>Status_To_Terminated</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND($Permission.FP_Finance_Permissions, OR( ISPICKVAL( Type__c , &apos;Refund&apos;) , ISPICKVAL(Type__c, &apos;Adjustment&apos;)), ISPICKVAL( Status__c , &apos;Draft&apos;), RecordType.DeveloperName = &apos;FP_Additional_Charges&apos;, NOT (ISBLANK( Product__c )), NOT(ISBLANK( Product_Group__c )), NOT(ISBLANK( Specifications__c )), NOT(ISNULL( Total_Amount__c )), NOT(ISBLANK( Start_Date__c )))</formula>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>APAC_Standard Approval For Add Charges</label>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
