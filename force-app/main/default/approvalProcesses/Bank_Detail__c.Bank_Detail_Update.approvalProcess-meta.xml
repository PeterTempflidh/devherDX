<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Bank_Account_Number__c</field>
        <field>Bank_Account_Name__c</field>
        <field>Bank_Account_Owner__c</field>
        <field>Bank_Account_Type__c</field>
        <field>Bank_Direct_Debit__c</field>
        <field>Bank_Name__c</field>
        <field>Account__c</field>
        <field>Blocked_Payout__c</field>
        <field>Status__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Bank_Detail_Update_Email_Notification</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Status_to_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>cherry.ho@foodpanda.hk</name>
                <type>user</type>
            </approver>
            <approver>
                <name>y.lai@foodpanda.hk</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Account.Record_Country__c</field>
                <operation>equals</operation>
                <value>Hong Kong</value>
            </criteriaItems>
            <criteriaItems>
                <field>Account.Account_Status__c</field>
                <operation>notEqual</operation>
                <value>New,Negotiation,Collecting Documents</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Bank Detail Update Approval HKG</label>
        <name>Bank_Detail_Update_Approval_HKG</name>
        <rejectionActions>
            <action>
                <name>Update_Status_to_Rejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Account.RecordType</field>
            <operation>equals</operation>
            <value>FP Account</value>
        </criteriaItems>
        <criteriaItems>
            <field>Bank_Detail__c.Bank_Account_Number__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Bank_Detail__c.Bank_Account_Owner__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Bank_Detail__c.Status__c</field>
            <operation>notEqual</operation>
            <value>Approved</value>
        </criteriaItems>
        <criteriaItems>
            <field>Bank_Detail__c.Bank_Name__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Status_to_Approval_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Bank Detail Update</label>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
