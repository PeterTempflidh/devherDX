<aura:component description="Auto Close Tabs with  Chats"
    implements="force:lightningQuickAction,force:hasRecordId,force:hasSObjectName,flexipage:availableForAllPageTypes">

    <aura:attribute name="showCloseModal" type="Boolean" default="false" />
    <aura:attribute name="closeModalPromiseResolve" type="Object"/>
    <!-- <aura:attribute name="isActiveTabPromiseResolve" type="Object"/> -->
    <aura:handler name="init" value="{!this}" action="{!c.onInit}" />
    <aura:handler event="lightning:conversationChatEnded" action="{!c.onChatEnded}" />

    <lightning:conversationToolkitAPI aura:id="conversationKit" />
    <lightning:workspaceAPI aura:id="workspace" />

    <aura:if isTrue="{!v.showCloseModal}">

        <section role="dialog" tabindex="-1" aria-label="Meaningful description of the modal content" aria-modal="true"
            aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
            <div class="slds-modal__container">
                <header class="slds-modal__header slds-modal__header_empty">
                    <button class="slds-button slds-button_icon slds-modal__close slds-button_icon-inverse"
                        title="Close">
                        <!-- <svg class="slds-button__icon slds-button__icon_large" aria-hidden="true">
                            <use xlink:href="/assets/icons/utility-sprite/svg/symbols.svg#close"></use>
                        </svg> -->
                        <span class="slds-assistive-text">Close</span>
                    </button>
                </header>
                <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                    <p>
                        Chat has ended - please close the tab to recieve the next chat. 
                    </p>
                    <p>
                        The tab will close automatically in y seconds. 
                    </p>

                </div>
                <footer class="slds-modal__footer">
                    <button class="slds-button slds-button_neutral" onclick="{!c.onCancelButtonPressed}">Cancel</button>
                    <button class="slds-button slds-button_brand" onclick="{!c.onCloseTabButtonPressed}">Close Tab</button>
                </footer>
            </div>
        </section>
        <div class="slds-backdrop slds-backdrop_open"></div>
    </aura:if>

</aura:component>