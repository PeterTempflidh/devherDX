<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Global_Root_Cause_mandatory_Online_Payme</fullName>
    <active>true</active>
    <description>03718693 - always mandatory when closing a case</description>
    <errorConditionFormula>(RecordType.DeveloperName=&quot;DE_Internal_Case&quot; 
||
RecordType.DeveloperName=&quot;AT_Internal_Case&quot;) 
&amp;&amp;
TEXT(Type)=&quot;Online Payment&quot; 
&amp;&amp; 
TEXT(Status)=&quot;Closed&quot; 
&amp;&amp; 
ISBLANK((Root_Cause__c))
&amp;&amp;
NOT(ISBLANK(TEXT(Closed_Reason__c)))</errorConditionFormula>
    <errorDisplayField>Root_Cause__c</errorDisplayField>
    <errorMessage>Please add a Root Cause before closing the case</errorMessage>
</ValidationRule>
