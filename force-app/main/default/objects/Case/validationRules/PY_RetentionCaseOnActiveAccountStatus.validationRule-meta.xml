<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PY_RetentionCaseOnActiveAccountStatus</fullName>
    <active>true</active>
    <description>Retention case can only be created if the Account Status is &quot;Active&quot;</description>
    <errorConditionFormula>AND(ISNEW(),RecordType.DeveloperName=&quot;PY_Internal_Case&quot; ,ISPICKVAL(Type, &quot;Retention&quot;),NOT(ISPICKVAL( Account.Account_Status__c ,&apos;Active&apos;)))</errorConditionFormula>
    <errorMessage>Retention case can only be created if the Account Status is &quot;Active&quot;</errorMessage>
</ValidationRule>
