<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>HU_OtherPhone_Format</fullName>
    <active>true</active>
    <description>Check if Other Phone Number start with +36 or 0036</description>
    <errorConditionFormula>AND(RecordType.DeveloperName =&quot;HU_Lead&quot;,
	NOT(ISBLANK(Other_Phone__c)),
	NOT(AND(OR(LEN(Other_Phone__c)==11, LEN(Other_Phone__c)==12),
			LEFT(Other_Phone__c, 3) == &quot;+36&quot;,
			ISNUMBER(RIGHT(Other_Phone__c,LEN(Other_Phone__c)-3)))))</errorConditionFormula>
    <errorDisplayField>Other_Phone__c</errorDisplayField>
    <errorMessage>Phone number should start with country code and not include spaces</errorMessage>
</ValidationRule>
