<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>GLOBAL_Lost_Leads</fullName>
    <active>true</active>
    <description>Lost Leads can not be without reason</description>
    <errorConditionFormula>AND(ISPICKVAL(Status,&quot;Lost&quot;),ISBLANK (TEXT (Lost_Reason__c ) ),
NOT($Permission.Exclude_from_Validation), 
$Profile.Name &lt;&gt; &quot;System Administrator&quot;)</errorConditionFormula>
    <errorDisplayField>Lost_Reason__c</errorDisplayField>
    <errorMessage>Please put a lost reason.</errorMessage>
</ValidationRule>
