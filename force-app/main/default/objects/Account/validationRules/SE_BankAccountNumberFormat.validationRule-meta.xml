<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>SE_BankAccountNumberFormat</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
  $RecordType.DeveloperName = &apos;SE_Account&apos;,
  ISPICKVAL(Bank_Account_Type__c,&apos;Bank Account&apos;),
  NOT(REGEX(Bank_Account_Number__c,&quot;[0-9]{4,5}\\s-\\s[0-9]{7,10}&quot;))
)</errorConditionFormula>
    <errorDisplayField>Bank_Account_Number__c</errorDisplayField>
    <errorMessage>The Bank Account Number does not fit the format. Example 84806 - 9212311236</errorMessage>
</ValidationRule>
