<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Only_one_active_bank_account</fullName>
    <active>true</active>
    <errorConditionFormula>IF(AND(TEXT(Active_Bank_Account__c) == &apos;Yes&apos;, TEXT( Alternative_Bank_Account_Active__c ) == &apos;Yes&apos;),True,False)</errorConditionFormula>
