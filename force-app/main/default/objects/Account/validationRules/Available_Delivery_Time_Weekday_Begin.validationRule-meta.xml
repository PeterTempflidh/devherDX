<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Available_Delivery_Time_Weekday_Begin</fullName>
    <active>true</active>
    <description>Check valid time</description>
    <errorConditionFormula>NOT (OR ( ISBLANK( Available_Delivery_Time_Weekday_Begin__c ) , REGEX( Available_Delivery_Time_Weekday_Begin__c ,&quot;([0-9]|0[0-9]|1[0-9]|2[0-3]):[0-5][0-9]&quot;)))</errorConditionFormula>
    <errorDisplayField>Available_Delivery_Time_Weekday_Begin__c</errorDisplayField>
    <errorMessage>Please enter a correct time format.</errorMessage>
</ValidationRule>
