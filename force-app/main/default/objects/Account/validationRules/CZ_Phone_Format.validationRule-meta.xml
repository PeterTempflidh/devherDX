<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CZ_Phone_Format</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    RecordType.DeveloperName = &apos;CZ_Account&apos;,
    NOT(ISBLANK(Phone)),
    NOT(REGEX(Phone, &quot;^([+]420|[+]421)[0-9]{9}$&quot;))
)</errorConditionFormula>
    <errorMessage>Phone should start with +420 or +421 and be followed by 9 digits, without spaces.</errorMessage>
</ValidationRule>
